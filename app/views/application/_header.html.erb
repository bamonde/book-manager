<div class="row my-3 header">
  <div class="col-9">
    <%= image_tag asset_path('book-logo-crop.jpg'), class: 'logo', alt: 'Logo' %>
    <h1><%= t('app_name') %></h1>
  </div>
  <div class="col-3 text-end py-1">
    <p class="m-0"><%= current_user.name.present? ? current_user.name : current_user.email %></p>
    <%= link_to t('.my_data'), edit_user_registration_path, class: 'my-data' %>
    <%= button_to t('.sign_out'), destroy_user_session_path, method: :delete, class: 'btn btn-link p-0 sign-out' %>
  </div>
</div>
