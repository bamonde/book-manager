<div id="books">
  <div class="card">
    <h5 class="card-header">
      <%= @book.title %>
      <small>
        <i>(<%= t('.title') %>)</i>
      </small>
    </h5>
    <div class="card-body">
      <h5 class="card-title"><%= t('.informations') %></h5>
      <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label"><%= t('.genre') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.genre %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label"><%= t('.edition') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.edition %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.release_date') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= l @book.release_date %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.authors') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.authors_name.join(', ') %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.publisher') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.publisher.name %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.isbn') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.isbn %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.iccn') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.iccn %>">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label"><%= t('.oclc') %></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value="<%= @book.oclc %>">
        </div>
      </div>

      <div class="mb-3 row">
        <div class="col">
          <%= link_to 'Voltar', books_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
