<div id="books">
  <% if @books.empty? %>
    <div>Nenhum livro cadastrado</div>
  <% else %>
    <table>
      <thead>
        <tr>
          <td>Título</td>
          <td>Gênero</td>
          <td>Autor(es)</td>
          <td>Lançamento</td>
          <td>Edição</td>
          <td>Editora</td>
          <td>ISBN</td>
          <td>ICCN</td>
          <td>OCLC</td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.genre %></td>
            <td><%= book.authors.map(&:name).join(', ') %></td>
            <td><%= l book.release_date %></td>
            <td><%= book.edition %></td>
            <td><%= book.publisher.name %></td>
            <td><%= book.isbn %></td>
            <td><%= book.iccn %></td>
            <td><%= book.oclc %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
