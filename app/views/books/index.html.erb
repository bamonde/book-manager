<div id="books">
  <div class="row my-2">
    <div class="col text-right">
      <%= link_to 'Novo Livro', new_book_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <% if @books.empty? %>
    <div>Nenhum livro cadastrado</div>
  <% else %>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Título</th>
          <th>Gênero</th>
          <th>Autor(es)</th>
          <th>Lançamento</th>
          <th>Edição</th>
          <th>Editora</th>
          <th>ISBN</th>
          <th>ICCN</th>
          <th>OCLC</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.genre %></td>
            <td><%= book.authors.map(&:name).join(', ') %></td>
            <td><%= l book.release_date %></td>
            <td><%= book.edition %></td>
            <td><%= book.publisher.name %></td>
            <td><%= book.isbn %></td>
            <td><%= book.iccn %></td>
            <td><%= book.oclc %></td>
            <td>
              <%= link_to edit_book_path(book) do %>
                <span class="material-symbols-outlined">edit_square</span>
              <% end %>
              <%= link_to book_path(book), data: { turbo_method: "delete", turbo_confirm: 'Are you sure?' } do %>
                <span class="material-symbols-outlined">delete</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
